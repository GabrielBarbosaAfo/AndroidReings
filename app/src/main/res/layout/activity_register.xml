<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_medieval"
    tools:context=".screens.RegisterActivity">

    <ImageView
        android:id="@+id/top_frame_reg"
        android:layout_width="330dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/frame_topo"
        android:scaleType="fitXY"
        android:src="@drawable/frame_topo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/title_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Registrar"
        android:textColor="#2B1F17"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/top_frame_reg"
        app:layout_constraintEnd_toEndOf="@id/top_frame_reg"
        app:layout_constraintStart_toStartOf="@id/top_frame_reg"
        app:layout_constraintTop_toTopOf="@id/top_frame_reg" />

    <ImageView
        android:id="@+id/bottom_frame_reg"
        android:layout_width="330dp"
        android:layout_height="600dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/frame_base"
        android:scaleType="fitXY"
        android:src="@drawable/frame_base"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_frame_reg" />

    <LinearLayout
        android:id="@+id/content_container_reg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal|top"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="@id/bottom_frame_reg"
        app:layout_constraintEnd_toEndOf="@id/bottom_frame_reg"
        app:layout_constraintStart_toStartOf="@id/bottom_frame_reg"
        app:layout_constraintTop_toTopOf="@id/bottom_frame_reg">

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Nome Real"
            android:textColor="#5D4037"
            android:textStyle="bold"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/et_nome"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edittext_medieval"
            android:hint="Ex: Arthur Pendragon"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#D4C8B0"
            android:textSize="14sp" />

        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Nome de Usuário"
            android:textColor="#5D4037"
            android:textStyle="bold"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/et_username"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edittext_medieval"
            android:hint="Ex: rei_arthur"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#D4C8B0"
            android:textSize="14sp" />

        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Email"
            android:textColor="#5D4037"
            android:textStyle="bold"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edittext_medieval"
            android:hint="email@reino.com"
            android:inputType="textEmailAddress"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#D4C8B0"
            android:textSize="14sp" />

        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Senha"
            android:textColor="#5D4037"
            android:textStyle="bold"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/et_senha"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edittext_medieval"
            android:hint="******"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#D4C8B0"
            android:textSize="14sp" />

        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Chave da API"
            android:textColor="#5D4037"
            android:textStyle="bold"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/et_api_key"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edittext_medieval"
            android:hint="Chave Mágica"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#D4C8B0"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_registrar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_medieval_google"
            android:backgroundTint="#C8A44A"
            android:elevation="4dp"
            android:text="Alistar-se"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>