<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/overlay_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181109"
    android:visibility="gone"
    android:clickable="true"
    android:focusable="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/menu_window"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        app:layout_constraintWidth_percent="0.92"
        app:layout_constraintHeight_percent="0.75"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:padding="30dp"
            android:background="@drawable/bg_config">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/btn_close_menu"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_btn_close"
                    android:contentDescription="@string/close_menu"
                    android:background="?attr/selectableItemBackgroundBorderless" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/menu_tabs"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:padding="4dp"
                android:clipToOutline="true"
                android:outlineProvider="bounds">

                <!-- TAB SCORE -->
                <LinearLayout
                    android:id="@+id/tab_score"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="0dp">

                    <ImageView
                        android:id="@+id/icon_score"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_score"
                        android:contentDescription="@string/menu_title_score"/>

                </LinearLayout>

                <!-- TAB CHARACTERS -->
                <LinearLayout
                    android:id="@+id/tab_characters"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="0dp">

                    <ImageView
                        android:id="@+id/icon_characters"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_characters"
                        android:contentDescription="@string/menu_title_characters"/>
                </LinearLayout>

                <!-- TAB SETTINGS -->
                <LinearLayout
                    android:id="@+id/tab_settings"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="0dp">

                    <ImageView
                        android:id="@+id/icon_settings"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_config"
                        android:contentDescription="@string/menu_title_settings" />

                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/menu_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <include
                    android:id="@+id/page_score"
                    layout="@layout/menu_page_score"
                    android:visibility="visible"/>

                <include
                    android:id="@+id/page_settings"
                    layout="@layout/menu_page_settings"
                    android:visibility="gone"/>

                <include
                    android:id="@+id/page_characters"
                    layout="@layout/menu_page_characters"
                    android:visibility="gone"/>

            </FrameLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
