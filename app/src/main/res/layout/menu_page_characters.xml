<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <!-- ScrollView para rolagem -->
    <ScrollView
        android:id="@+id/scroll_characters"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <!-- Título da tela -->
            <TextView
                android:id="@+id/title_characters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_characters_screen"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/cinzel"
                android:textColor="#E6D5A3"
                android:paddingBottom="16dp"/>

            <!-- Explicação sobre o jogo -->
            <TextView
                android:id="@+id/description_game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description_game"
                android:textSize="14sp"
                android:textColor="#CCCCCC"
                android:lineSpacingExtra="4dp"
                android:gravity="center"
                android:paddingBottom="24dp"/>

            <TextView
                android:id="@+id/title_reino_characters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_characters"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/cinzel"
                android:textColor="#E6D5A3"
                android:paddingBottom="16dp"/>

            <!-- Personagens -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:divider="@android:color/darker_gray"
                android:dividerPadding="16dp">

                <!-- Personagem 1: Isolde -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingBottom="40dp">

                    <ImageView
                        android:id="@+id/img_isolde"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:contentDescription="@string/character_isolde_description"
                        android:src="@drawable/bg_card_isolde"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/character_isolde_name"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:fontFamily="@font/cinzel"
                        android:textAlignment="center"
                        android:textColor="#E6D5A3"
                        android:paddingTop="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/character_isolde_description"
                        android:textSize="14sp"
                        android:textColor="#AAAAAA"
                        android:lineSpacingExtra="2dp"
                        android:gravity="center"
                        android:paddingTop="8dp"/>
                </LinearLayout>

                <!-- Personagem 2: Malachi -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingBottom="40dp">

                    <ImageView
                        android:id="@+id/img_malachi"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/bg_card_malachi"
                        android:contentDescription="@string/character_malachi_description"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/character_malachi_name"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:fontFamily="@font/cinzel"
                        android:textAlignment="center"
                        android:textColor="#E6D5A3"
                        android:layout_gravity="center"
                        android:paddingTop="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/character_malachi_description"
                        android:textSize="14sp"
                        android:textColor="#AAAAAA"
                        android:lineSpacingExtra="2dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingTop="8dp"/>
                </LinearLayout>

                <!-- Personagem 3: Elowen -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingBottom="40dp">

                    <ImageView
                        android:id="@+id/img_elowen"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:contentDescription="@string/character_elowen_description"
                        android:src="@drawable/bg_card_elowen"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/character_elowen_name"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:fontFamily="@font/cinzel"
                        android:textAlignment="center"
                        android:textColor="#E6D5A3"
                        android:paddingTop="8dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/character_elowen_description"
                        android:textSize="14sp"
                        android:textColor="#AAAAAA"
                        android:lineSpacingExtra="2dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:paddingTop="8dp"/>
                </LinearLayout>

                <!-- Personagem 4: Borin -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingBottom="40dp">

                    <ImageView
                        android:id="@+id/img_borin"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:contentDescription="@string/character_borin_description"
                        android:src="@drawable/bg_card_borin"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/character_borin_name"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:fontFamily="@font/cinzel"
                        android:textAlignment="center"
                        android:textColor="#E6D5A3"
                        android:paddingTop="8dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/character_borin_description"
                        android:textSize="14sp"
                        android:textColor="#AAAAAA"
                        android:lineSpacingExtra="2dp"
                        android:gravity="center"
                        android:paddingTop="8dp"/>
                </LinearLayout>

                <!-- Personagem 5: Nyra -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingBottom="40dp">

                    <ImageView
                        android:id="@+id/img_nyra"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/bg_card_nyra"
                        android:contentDescription="@string/character_nyra_description"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/character_nyra_name"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/cinzel"
                        android:textAlignment="center"
                        android:textColor="#E6D5A3"
                        android:paddingTop="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/character_nyra_description"
                        android:textSize="14sp"
                        android:textColor="#AAAAAA"
                        android:lineSpacingExtra="2dp"
                        android:gravity="center"
                        android:paddingTop="8dp"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
