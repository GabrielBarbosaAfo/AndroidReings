<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#641919"/>
            <corners android:radius="10dp"/>
            <padding android:left="12dp" android:top="8dp" android:right="12dp" android:bottom="8dp"/>
            <stroke android:width="1dp" android:color="#4a0f0f"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:startColor="#8A2727" android:endColor="#6b1d1d"/>
            <corners android:radius="10dp"/>
            <padding android:left="12dp" android:top="8dp" android:right="12dp" android:bottom="8dp"/>
            <stroke android:width="1dp" android:color="#6b1d1d"/>
        </shape>
    </item>
</selector>
