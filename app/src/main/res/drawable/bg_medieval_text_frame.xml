<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bordas externas queimadas (bem mais escuras) -->
    <item>
        <shape>
            <gradient
                android:type="radial"
                android:gradientRadius="400dp"
                android:centerColor="#c09552"
                android:endColor="#2b1a0c"
                android:centerX="0.5"
                android:centerY="0.5" />

            <corners android:radius="10dp"/>
        </shape>
    </item>

    <!-- Camada interna fosca -->
    <item
        android:left="6dp"
        android:top="6dp"
        android:right="6dp"
        android:bottom="6dp">
        <shape>

            <!-- Centro mais fosco e menos amarelo -->
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#a07c45"
                android:centerColor="#c09552"
            android:endColor="#a07c45" />

            <corners android:radius="8dp"/>

            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp"/>
        </shape>
    </item>

</layer-list>
